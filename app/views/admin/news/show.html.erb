<h1>
  <span class="bd-content-title">
    <%= t('activerecord.models.news.other') %>
  </span>
</h1>

<p id="notice"><%= notice %></p>

<form>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label"><%= t('.title') %></label>
    <div class="col-sm-10">
      <input type="text" readonly class="form-control-plaintext" value="<%= @admin_news.title %>">
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label"><%= t('.subtitle') %></label>
    <div class="col-sm-10">
      <input type="text" readonly class="form-control-plaintext" value="<%= @admin_news.subtitle %>">
    </div>
  </div>
  
  <div class="form-group row">
    <label class="col-sm-2 col-form-label"><%= t('.user') %></label>
    <div class="col-sm-10">
      <input type="text" readonly class="form-control-plaintext" value="<%= @admin_news.user.name %>">
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label"><%= t('.content') %></label>
    <div class="col-sm-10">
      <input type="text" readonly class="form-control-plaintext" value="<%= @admin_news.content %>">
    </div>
  </div>

  <div class="form-group">
    <% @admin_news.tags.each do |tag| %>
      <span class="badge badge-pill badge-primary"><%= tag.name %></span>
    <% end %>
  </div>

</form>

<hr>

<%= link_to t('helpers.actions.back'), admin_news_index_path, class: 'btn btn-sm btn-secondary' %>
<%= link_to t('helpers.actions.edit'), edit_admin_news_path(@admin_news), class: 'btn btn-sm btn-info' %>

