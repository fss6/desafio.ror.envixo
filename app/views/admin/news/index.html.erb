<p id="notice"><%= notice %></p>

<div class="float-right">
  <%= link_to t('helpers.submit.create', 
        model: t('activerecord.models.news.one')), 
        new_admin_news_path, class: 'btn btn-primary' %>
</div>

<h1>
  <span class="bd-content-title">
    <%= t('activerecord.models.news.other') %>
  </span>
</h1>


<table class="table">
  <thead>
    <tr>
      <th scope="col"><%= t '.title' %></th>
      <th scope="col"><%= t '.user' %></th>
      <th scope="col"><%= t '.created_at' %></th>
      <th scope="col"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_news.each do |news| %>
      <tr>
        <td><%= news.title %></td>
        <td><%= news.user.name %></td>
        <td><%= news.created_at_human %></td>
        <td>
          <%= link_to t('helpers.actions.show'), news, class: 'btn btn-sm btn-info' %>
          <%= link_to t('helpers.actions.edit'), edit_admin_news_path(news), class: 'btn btn-sm btn-success' %>
          <%= link_to t('helpers.actions.destroy'), news, method: :delete, class: 'btn btn-sm btn-danger', 
            data: { confirm: t('helpers.confirm.destroy') } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>