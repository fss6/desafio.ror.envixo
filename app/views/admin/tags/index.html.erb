<p id="notice"><%= notice %></p>

<div class="float-right">
  <%= link_to t('helpers.submit.create', 
        model: t('activerecord.models.tag.one')), 
        new_admin_tag_path, class: 'btn btn-primary' %>
</div>

<h1>
  <span class="bd-content-title">
    <%= t('activerecord.models.tag.other') %>
  </span>
</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col"><%= t '.name' %></th>
      <th scope="col"><%= t '.locale' %></th>
      <th scope="col"><%= t '.user' %></th>
      <th scope="col"><%= t '.created_at' %></th>
      <th scope="col"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_tags.each do |tag| %>
      <tr>
        <td><%= tag.name %></td>
        <td><%= tag.locale_human %></td>
        <td><%= tag.user.name %></td>
        <td><%= tag.created_at %></td>
        <td>
          <%= link_to t('helpers.actions.show'), tag, class: 'btn btn-sm btn-info' %>
          <%= link_to t('helpers.actions.edit'), edit_admin_tag_path(tag), class: 'btn btn-sm btn-success' %>
          <%= link_to t('helpers.actions.destroy'), tag, method: :delete, class: 'btn btn-sm btn-danger', 
            data: { confirm: t('helpers.confirm.destroy') } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>