<p id="notice"><%= notice %></p>

<h1>Admin Comments</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Locale</th>
      <th>Verified</th>
      <th>Commentable</th>
      <th>Commentable type</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_comments.each do |admin_comment| %>
      <tr>
        <td><%= admin_comment.content %></td>
        <td><%= admin_comment.locale %></td>
        <td><%= admin_comment.verified %></td>
        <td><%= admin_comment.commentable_id %></td>
        <td><%= admin_comment.commentable_type %></td>
        <td><%= admin_comment.user_id %></td>
        <td><%# link_to 'Show', admin_comment %></td>
        <td><%# link_to 'Edit', edit_admin_comment_path(admin_comment) %></td>
        <td><%= link_to 'Destroy', admin_comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
