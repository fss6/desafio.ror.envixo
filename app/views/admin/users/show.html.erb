<h1>
  <span class="bd-content-title">
    <%= t('activerecord.models.user.one') %>
  </span>
</h1>

<p id="notice"><%= notice %></p>

<form>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label"><%= t('.name') %></label>
    <div class="col-sm-10">
      <input type="text" readonly class="form-control-plaintext" value="<%= @user.name %>">
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label"><%= t('.locale') %></label>
    <div class="col-sm-10">
      <input type="text" readonly class="form-control-plaintext" value="<%= @user.locale_human %>">
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label"><%= t('.user') %></label>
    <div class="col-sm-10">
      <input type="text" readonly class="form-control-plaintext" value="<%= @user.name %>">
    </div>
  </div>
</form>

<%= link_to t('helpers.actions.back'), users_path, class: 'btn btn-sm btn-secondary' %>
<%= link_to t('helpers.actions.edit'), edit_user_path(@user), class: 'btn btn-sm btn-info' %>