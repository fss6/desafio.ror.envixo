<%= form_for(resource, as: resource_name, 
      url: session_path(resource_name), 
      html: {class: "form-signin"}) do |f| %>
  
  <h1 class="h3 mb-3 font-weight-normal"><%= t('helpers.info.signin') %></h1>
  
  <%= f.label :email %>
  <%= f.email_field :email, class:"form-control mb-2", autofocus: true, autocomplete: "email" %>
  
  <%= f.label :password %>
  <%= f.password_field :password, class:"form-control", autocomplete: "current-password" %>
  
  <div class="actions">
    <%= f.submit "Log in", class: 'btn btn btn-primary btn-block' %>
    <%= render "devise/shared/links" %>
  </div>

<% end %>


